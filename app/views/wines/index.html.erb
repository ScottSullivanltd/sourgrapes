<br>
<h1>Wines</h1>
<table>
  <tr>
    <th>Wine Name</th>
    <th>Blend</th>
    <th>Vintage</th>
    <th>Barrels Produced</th>
    <th>Signature Label</th>
    <th>Update Wine</th>
    <th>Delete Wine</th>
  </tr>
  <% @wines.each do |wine| %>
    <div id="wine-<%= wine.id %>">
      <tr>
        <td><strong><%= link_to wine.name, "/wines/#{wine.id}" %></strong></td>
        <td><strong><%= wine.blend %></strong></td>
        <td><strong><%= wine.vintage %></strong></td>
        <td><strong><%= wine.barrels_produced %></strong></td>
        <td><strong><%= wine.signature_label %></strong></td>
        <td><strong><%= link_to "Update Wine", "/wines/#{wine.id}/edit" %></strong></td>
        <td><strong><%= link_to "Delete Wine", "/wines/#{wine.id}", method: :delete %></strong></td>
      </tr>
    </div>
  <% end %>
</table>


<h1>Signature Labels</h1>
<% @wines.is_true.each do |wine| %>
  <h3><%= wine.name %></h3>
  <p>Blend: <%= wine.blend %></p>
  <p>Vintage: <%= wine.vintage %></p>
  <p>Barrels Produced: <%= wine.barrels_produced %></p>
  <p>Signature Label: <%= wine.signature_label %></p>
<% end %>
